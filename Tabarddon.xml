<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <Frame
        name="Tabarddon_Frame">

        <Size>
            <AbsDimension
                x="300" y="400" />
        </Size>

        <Anchors>
            <Anchor
                point="LEFT" />
        </Anchors>

        <Backdrop
            bgFile="Interface/SPELLBOOK/Spellbook-Page-1.blp"
            edgeFile="Interface/Tooltips/UI-Tooltip-Border"
            tile="false">

            <EdgeSize>
                <AbsValue val="10" />
            </EdgeSize>

            <BackgroundInsets>
                <AbsInset
                    left="5" right="5"
                    top="5" bottom="5" />
            </BackgroundInsets>

        </Backdrop>

        <Layers>
            <Layer level="OVERLAY">
                <FontString
                    name="$parent_Messages"
                    justifyH="LEFT" justifyV="TOP"
                    font="Fonts\ARIALN.TTF">

                    <Anchors>
                        <Anchor
                            point="TOPLEFT"
                            relativeTo="$parent"
                            x="5" y="5" />
                    </Anchors>

                    <FontHeight
                        val="10" />

                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <Button
                name="$parent_Suggested_Tabard"
                inherits="UIPanelButtonTemplate"
                text="Earthen Ring">

                <Size>
                    <AbsDimension
                        x="40" y="22"/>
                </Size>

                <Anchors>
                    <Anchor
                        point="CENTER"
                        relativeTo="$parent_Messages"
                        y="-25" />
                </Anchors>
            
            </Button>
        </Frames>

    </Frame>

    <Script file="Tabarddon.lua" />

</Ui>
